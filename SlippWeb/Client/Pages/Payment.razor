<div class="main-container">
    @switch (OrderIsConfirmed)
    {
        case true:
            <ConfirmedPurchase PurchasedTicket="@Ticket" NumberOfTicketsPurchased="@choosenValue" userName="@userFirstName"></ConfirmedPurchase>
            break;
        default:
