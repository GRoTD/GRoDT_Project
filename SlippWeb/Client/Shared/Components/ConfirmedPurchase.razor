 <PageHeader HeaderTitle="Bekräftelse"/>
 <div class="Receipt-modal">
     <MudText Typo="Typo.h2">Grattis!</MudText>
     <MudText Typo="Typo.body1">Varmt välkommen till en härlig kväll på @PurchasedTicket.ClubName.</MudText>
     <MudDivider DividerType="DividerType.Middle" Class="my-6"/>
     <div class="displayRow">
     <MudText Typo="Typo.body1">@userName</MudText> 
         @if (ticketsToShow > 0)
         {
             <MudText Typo="Typo.body1">+@ticketsToShow</MudText>
         }
     </div>
     <MudText Color="Color.Dark" Typo="Typo.body2">@PurchasedTicket.StartValidTime.ToShortDateString() | @PurchasedTicket.StartValidTime.ToShortTimeString()</MudText>
     <MudText Typo="Typo.body1">Totalt belopp: @Math.Round((PurchasedTicket.Price) * (@NumberOfTicketsPurchased)) kr</MudText> 
     
     
     <MudButton Class="mt-4" Href="/MySlipp" 
                Target="_blank"
                Variant="Variant.Filled"
                Color="Color.Primary">
           Mina Slipp-biljetter
     </MudButton>
 </div>
@code {
    [Parameter] public CreateTicketOutput PurchasedTicket { get; set; }
    [Parameter] public int NumberOfTicketsPurchased { get; set; }
    [Parameter] public string userName { get; set; }
    public int ticketsToShow { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();
        ticketsToShow = NumberOfTicketsPurchased - 1;
    }

}
 <style>
     .Receipt-modal {
         display: flex;
         flex-direction: column;
         align-items: center;
         height: 50vh;
         width: 80vw;
         justify-content: center;
         text-align: center;
     }
     .displayRow {
         display: flex;
         flex-direction: row;
         gap: 5px;  
     }
 </style>