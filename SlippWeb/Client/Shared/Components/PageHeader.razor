@inject NavigationManager NavigationManager
@inject PageHistoryState PageHistoryState

<div class="page-header">
    
    
        <div class="header-top-icons">
            <MudIconButton Size="Size.Medium" Icon="@Icons.Filled.ArrowCircleLeft" Color="Color.Primary" OnClick="GoBack"/>
        </div>

    <div >
        <MudText Color="Color.Primary" Typo="Typo.h2">@HeaderTitle</MudText>
    </div>


        @*TODO Man kan dra hela skärmen lite åt sidan (design grej)*@

</div>





@code {
    [Parameter] public string HeaderTitle { get; set; }
    
    public void GoBack()
    {
        NavigationManager.NavigateTo(PageHistoryState.GetGoBackPage());
    }
}

