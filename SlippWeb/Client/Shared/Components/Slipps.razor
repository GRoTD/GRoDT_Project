@inject HttpClient Client


<MudPaper Class="d-flex align-center slipp-ticket mx-4">
    <MudGrid>
        <MudItem xs="8" Class="d-flex flex-column justify-center align-center">
            <MudText Typo="Typo.body1">Veronica Maggio på scen</MudText>
           
            <MudText Typo="Typo.body2">@tickets[0].StartValidTime.ToShortDateString() | @tickets[0].StartValidTime.ToShortTimeString()</MudText>
          
            <MudPaper Style="background-color: transparent; flex-direction: row" Class="d-flex align-center" Elevation="0">
                <MudIconButton OnClick="showMap" Color="Color.Primary" Size="Size.Medium" Icon="@Icons.Filled.LocationOn"></MudIconButton>
                <MudText Typo="Typo.h3">@tickets[0].Title</MudText>
            </MudPaper>
            
            <MudText Typo="Typo.body2">Köföreträde och entré</MudText>
            <MudText Typo="Typo.body2">för 3 personer</MudText>

        </MudItem >
            
        <MudItem xs="4" Class="d-flex flex-column justify-center align-center">
           
                <MudIconButton OnClick="ShowTicket" Color="Color.Primary" Size="Size.Large" Icon="@Icons.Filled.QrCode2"></MudIconButton>
                <MudText Color="Color.Primary" Typo="Typo.body2">Visa Biljett</MudText>
                
        </MudItem>
           
    </MudGrid>
</MudPaper>

<style>
    .slipp-ticket {
        background-color: transparent;
        border: dotted 1px #F2C080;
        padding: 10px 5px;
    }
</style>

@code
{
